<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions pour localisation et contacts -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VibeCheck"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">


        <!-- MainActivity : Launcher principal -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />

        <!-- LoginActivity : Écran d'authentification (exported=true pour accès direct si besoin, ex. deep link) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- WelcomeActivity : Accueil post-auth -->

        <!-- EmotionDashboardActivity : Sélection émotions -->
        <activity
            android:name=".EmotionDashboardActivity"
            android:exported="false" />

        <!-- AIInterpretationActivity : Interprétation IA -->
        <activity
            android:name=".AIInterpretationActivity"
            android:exported="false" />

        <!-- PsychologistListActivity : Liste psychologues -->
        <activity
            android:name=".PsychologistListActivity"
            android:exported="false" />

        <!-- AmusementActivity : Mini-jeux -->
        <activity
            android:name=".AmusementActivity"
            android:exported="false" />

    </application>

</manifest>