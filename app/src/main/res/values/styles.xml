<resources>
    <!-- Style pour Boutons "Gentils" : Arrondis, avec padding doux -->
    <style name="GentleButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>

    <!-- Style pour Boutons Secondaires (Outlined) -->
    <style name="GentleOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/primary_blue</item>
    </style>

    <!-- Style pour EditText : Bordures arrondies, focus doux -->
    <style name="GentleEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/text_light</item>
        <item name="hintTextColor">@color/text_light</item>
    </style>

    <!-- Style pour Cards Émotions : Légèrement surélevées, arrondies -->
    <style name="EmotionCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Styles Manquants pour Login/EmotionDashboard -->
    <style name="Widget.VibeCheck.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_accent</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>

    <style name="Widget.VibeCheck.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_accent</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
</resources>